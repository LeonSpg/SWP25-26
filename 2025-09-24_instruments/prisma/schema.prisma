datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client"
    output   = "client"
    runtime  = "deno"
}

model Artist {
    id          String      @id @default(uuid())
    name        String      @unique
    instruments Instrument[]
}

model Instrument {
    id        String   @id @default(uuid())
    name      String   @unique
    direction Direction @relation(fields: [directionId], references: [id])
    directionId String
    artists   Artist[]
}

model Direction {
    id         String      @id @default(uuid())
    name       String      @unique
    instruments Instrument[]
}

